pre.vue-container {
	border-left-width: .5rem;
	border-left-style: solid;
	border-color: #42b983;
	border-radius: 0px;
    max-height: 600px;
}

pre.vue-container > code {
	font-size: 14px !important;
}

pre.vue-container > p {
	margin: -5px 0 -20px 0;
}

pre.vue-container code {
	background-color: #42b983 !important;
	padding: 3px 5px;
	border-radius: 3px;
	// color: #000;
}

pre.vue-container em {
	color: #808080;
	font-weight: light;
}



a.sidebar-link{
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; 
    line-height:1.05 !important;
}


  .theme-default-content  h2 {
	    margin-top: 3.1rem !important;
		margin-bottom: 1.1rem !important;
	    padding-top: 0px !important;
        display:inline-flex;
        align-items: center;
        font-weight: 700;
        background: #42b983;
        color: #fff;
        padding: 3px 10px 4px;
        border-top-right-radius: 3px;
        border-top-left-radius: 3px;
        margin-right: 3px;
        // font-size: 20px
    }

    .theme-default-content  h2:after {
        content: "";
        display: inline-block;
        vertical-align: bottom;
        border-bottom: 36px solid #E7F1E8;
        border-right: 20px solid transparent;
        position: relative;
        left: 32px;
        top: 1px
    }

    .theme-default-content  h2:before {
        content: "";
        border-bottom: 2px solid #42b983;
        width: 40%;
        display: block;
        height: 10px;
        position: absolute;
        margin-top: 32px
    }
		
		
